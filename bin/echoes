#!/usr/bin/env bash

ESC_SEQ="\x1b["
COL_RESET=$ESC_SEQ"39;49;00m"
COL_RED=$ESC_SEQ"31;01m"
COL_GREEN=$ESC_SEQ"32;01m"
COL_YELLOW=$ESC_SEQ"33;01m"
COL_BLUE=$ESC_SEQ"34;01m"
COL_MAGENTA=$ESC_SEQ"35;01m"
COL_CYAN=$ESC_SEQ"36;01m"

function task() {
  echo -e "${COL_YELLOW}[$(date +"%T")] $1...${COL_RESET}"
}

function ok() {
  echo -e "${COL_GREEN}[$(date +"%T")] Done.${COL_RESET}"
}

function bot() {
  echo -e "${COL_BLUE}[$(date +"%T")] $1${COL_RESET}"
}

function error() {
  echo -e "${COL_RED}[$(date +"%T")] Error: $1${COL_RESET}"
}

function prompt() {
  echo -en "${COL_BLUE}[$(date +"%T")] $1${COL_RESET} "
}

function warn() {
  echo -e "${COL_MAGENTA}[$(date +"%T")] Warning: $1${COL_RESET}"
}

function callout() {
  echo ""
  echo -e "-----------------------------------------------"
  echo -e "$1"
  echo -e "-----------------------------------------------"
  echo ""
}
